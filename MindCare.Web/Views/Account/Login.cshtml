@model MindCare.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="gradient-form bg-light flex-grow-1 py-3 py-lg-5">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-10 d-flex align-items-center">
                <div class="card rounded-3 text-black w-100">
                    <div class="row g-0">
                        <!-- Левая часть: форма -->
                        <div class="col-lg-6">
                            <div class="card-body p-md-5">

                                <div class="text-center mb-4">
                                    <img src="/images/image-removebg-preview.png"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-3 mb-4">We are The MindCare Team</h4>
                                </div>

                                <form asp-action="Login" method="post">
                                    @Html.AntiForgeryToken()

                                    <p class="text-muted mb-4">Please login to your account</p>

                                    <div class="form-outline mb-3">
                                        <input asp-for="Email" class="form-control" placeholder="Email address" />
                                        <label class="form-label" asp-for="Email">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input asp-for="Password" type="password" class="form-control" />
                                        <label class="form-label" asp-for="Password">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-check mb-3">
                                        <input asp-for="RememberMe" class="form-check-input" />
                                        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                                    </div>

                                    <div class="d-grid gap-2 mb-3">
                                        <button type="submit" class="btn btn-primary btn-block">Log in</button>
                                    </div>
                                    <div class="text-center mb-4">
                                        <a class="text-muted" href="#!">Forgot password?</a>
                                    </div>

                                    <hr />

                                    <div class="text-center">
                                        <p class="mb-2">Don't have an account?</p>
                                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Register">
                                            Create new
                                        </a>
                                    </div>
                                </form>

                            </div>
                        </div>

                        <!-- Правая часть: информационный баннер -->
                        <div class="col-lg-6 d-none d-lg-flex align-items-center gradient-custom-2">
                            <div class="px-4 py-5 text-white">
                                <h4 class="mb-3">We are more than just a company</h4>
                                <p class="small mb-0">
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                                    exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                </p>
                            </div>
                        </div>

                    </div> <!-- /.row.g-0 -->
                </div> <!-- /.card -->
            </div> <!-- /.col-xl-10 -->
        </div> <!-- /.row -->
    </div> <!-- /.container -->
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
