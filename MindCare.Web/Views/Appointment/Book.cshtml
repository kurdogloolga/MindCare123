@model MindCare.Web.Models.AppointmentFormViewModel

@{
    ViewData["Title"] = "Book Appointment";
}

<div class="container py-5">
    <h2 class="mb-4">Book an Appointment with @Model.SpecialistName</h2>

    <form method="post" asp-action="Book">
        <input type="hidden" name="SpecialistId" value="@Model.SpecialistId" />
        <div class="mb-3">
            <label for="Reason" class="form-label">Reason for Appointment</label>
            <textarea name="Reason" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Choose a Date and Time</label>
            <select name="AvailabilityId" class="form-select" required>
                @foreach (var slot in Model.AvailableSlots)
                {
                    <option value="@slot.Id">@slot.Date.ToShortDateString() at @slot.Time</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Mode</label>
            <select name="Mode" class="form-select">
                <option value="0">Offline</option>
                <option value="1">Online</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Book Appointment</button>
    </form>
</div>
